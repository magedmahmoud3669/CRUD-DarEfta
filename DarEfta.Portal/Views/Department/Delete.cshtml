@model DepartmentVM

@{
    ViewData["Title"] = "Delete Department";
}


<div class="block-header">
     <h2>Are You Sure To Delete @Model.Name Department</h2>
</div>


<form asp-controller="Department" asp-action="Delete" class="form-group">


    <input type="hidden" asp-for="Id" />

    <label asp-for="Name">Name</label>
    <input type="text" asp-for="Name" class="form-control" readonly />
    <br />


    <label asp-for="Code">Code</label>
    <input type="text" asp-for="Code" class="form-control" readonly/>
    <br />


    <center>
        <input type="submit" value="Delete" class="btn btn-primary" />
        <a asp-controller="Department" asp-action="Index" class="btn btn-info">Return</a>
        <a asp-controller="Department" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-info">Edit</a>
    </center>
</form>



