<a class="btn btn-primary" asp-controller="Department" asp-action="Create">Create New Department</a>

<table class="table table-hover table-bordered table-striped text-center">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Code</th>
        <th>Details</th>
        <th>Update</th>
        <th>Delete</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Code</td>
            <td><a asp-controller="Department" asp-action="Details" asp-route-id="@item.Id" class="btn btn-info" >Details</a></td>
            <td><a asp-controller="Department" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Update</a></td>
            <td><a asp-controller="Department" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a></td>
        </tr>
    }

</table>
