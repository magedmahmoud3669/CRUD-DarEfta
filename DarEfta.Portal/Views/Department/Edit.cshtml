@model DepartmentVM

@{
    ViewData["Title"] = "Edit Department";
}


<div class="block-header">
     <h2>Edit Department</h2>
</div>


<form asp-controller="Department" asp-action="Edit" class="form-group">

    <div asp-validation-summary="All" class="text-danger"></div>

    <input type="hidden" asp-for="Id" />

    <label asp-for="Name">Name</label>
    <input type="text" asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
    <br />


    <label asp-for="Code">Code</label>
    <input type="text" asp-for="Code" class="form-control" />
    <span asp-validation-for="Code" class="text-danger"></span>
    <br />


    <center>
        <input type="submit" value="Edit" class="btn btn-primary" />
        <input type="reset" value="Cancle" class="btn btn-warning" />
        <a asp-controller="Department" asp-action="Index" class="btn btn-info">Return</a>
        <a asp-controller="Department" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-info">Delete</a>
    </center>
</form>




@section JqueryValidation{
    <script src="~/plugins/jquery-validation/jquery.validate.js"></script>
    <script src="~/plugins/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

}
