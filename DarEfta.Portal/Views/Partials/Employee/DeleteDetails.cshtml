@model EmployeeVM

    <label asp-for="Name">Name</label>
    <input type="text" asp-for="Name" class="form-control" disabled />
    <br />


    <label asp-for="Salary">Salary</label>
    <input type="text" asp-for="Salary" class="form-control" disabled />
    <br />

    <label asp-for="Email">Email</label>
    <input type="text" asp-for="Email" class="form-control" disabled />
    <br />

    <label asp-for="Address">Address</label>
    <input type="text" asp-for="Address" class="form-control" disabled />
    <br />

    <label asp-for="HireDate">Hire Date</label>
    <input type="text" asp-for="HireDate" id="datepicker" class="form-control" autocomplete="off" disabled />
    <br />

    <div class="demo-checkbox">
        <input type="checkbox" asp-for="IsActive" disabled>
        <label asp-for="IsActive">IsActive</label>
    </div>
    <br />


    <label asp-for="Notes">Notes</label>
    <textarea rows="5" asp-for="Notes" class="form-control" disabled></textarea>
    <br />


    <select asp-for="DepartmentId" class="form-control" asp-items="(SelectList)ViewBag.DepartmentList"></select>