    @model EmployeeVM
  
    <label asp-for="Name">Name</label>
    <input type="text" asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
    <br />


   <label asp-for="Salary">Salary</label>
    <input type="text" asp-for="Salary" class="form-control" />
    <span asp-validation-for="Salary" class="text-danger"></span>
    <br />

    <label asp-for="Email">Email</label>
    <input type="text" asp-for="Email" class="form-control" />
    <span asp-validation-for="Email" class="text-danger"></span>
    <br />

    <label asp-for="Address">Address</label>
    <input type="text" asp-for="Address" class="form-control" />
    <span asp-validation-for="Address" class="text-danger"></span>
    <br />

    <label asp-for="HireDate">Hire Date</label>
    <input type="text" asp-for="HireDate" id="datepicker" class="form-control" autocomplete="off" />
    <span asp-validation-for="HireDate" class="text-danger"></span>
    <br />

    <div class="demo-checkbox">
        <input type="checkbox" asp-for="IsActive">
        <label asp-for="IsActive">IsActive</label>
        <span asp-validation-for="IsActive" class="text-danger"></span>
    </div>
    <br />


    <label asp-for="Notes">Notes</label>
    <textarea rows="5" asp-for="Notes" class="form-control"></textarea>
    <span asp-validation-for="Notes" class="text-danger"></span>
    <br />


    <select asp-for="DepartmentId" asp-items="(SelectList)ViewBag.DepartmentList">
        <option>Choose Department</option>
    </select>
    <br /> <br /> <br /> <br />